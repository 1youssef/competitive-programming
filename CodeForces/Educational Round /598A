#include <bits/stdc++.h>

using namespace std;

int main(){
    int t;
    cin >> t;
    while(t--){
        long long sum = 0;
        int n;
        cin >> n;
        sum = (n* 1LL *(n+1) /2);

        for (long long i =1; i<=n; i*=2){
            sum -= (i * 2);
        }
        cout << sum << endl;
    }
    return 0;
}
